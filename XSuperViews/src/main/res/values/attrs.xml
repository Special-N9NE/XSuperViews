<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="XRecyclerView">
        <!-- Attribute for setting the empty text message -->
        <attr name="emptyText" format="string" />

        <!-- Attribute for controlling the loading state (true for loading, false for not loading) -->
        <attr name="loading" format="boolean" />

        <!-- Attribute for enabling/disabling the divider in the RecyclerView -->
        <attr name="hasDivider" format="boolean" />

        <!-- Attribute for enabling/disabling swipe refresh functionality. if sets to true the loadingView will be disabled-->
        <attr name="swipeRefreshEnabled" format="boolean" />

        <!-- Attribute for setting the color scheme of the swipe refresh widget -->
        <attr name="swipeRefreshColor" format="color" />
    </declare-styleable>
</resources>
